{
  "root": true,
  "extends": ["universe/node", "universe/web", "universe/shared/typescript-analysis"],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["~", "."]],
        "extensions": [".ts", ".js", ".tsx", ".jsx", ".json"]
      }
    }
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.d.ts"],
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "rules": {
        "import/order": [
          "warn",
          {
            "groups": [["external", "builtin"], "internal", ["parent", "sibling"]],
            "newlines-between": "always",
            "alphabetize": {
              "order": "asc"
            }
          }
        ]
      }
    }
  ]
}
