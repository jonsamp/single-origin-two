{
  "defaultSeverity": "error",
  "extends": [
    "tslint:all",
    "tslint-microsoft-contrib/latest",
    "tslint-config-prettier"
  ],
  "jsRules": {},
  "rules": {
    // We want to eventually consider enabling these, but that will take some time:
    "member-ordering": false,
    "no-any": false,
    "no-console": false,
    "no-duplicate-imports": false,
    "no-implicit-dependencies": false,
    "no-inferred-empty-object-type": false,
    "no-null-keyword": false,
    "no-object-literal-type-assertion": false,
    "no-relative-imports": false,
    "no-require-imports": false,
    "no-shadowed-variable": false,
    "no-submodule-imports": false,
    "no-unbound-method": false,
    "no-unnecessary-callback-wrapper": false,
    "no-unsafe-any": false,
    "no-unused-variable": false,
    "no-void-expression": false,
    "ordered-imports": false,
    "prefer-const": false,
    "prefer-type-cast": false,
    "no-unnecessary-local-variable": false,
    "prefer-object-spread": false,
    "promise-function-async": false,
    "strict-boolean-expressions": false,
    "strict-type-predicates": false,
    "increment-decrement": false,
    "triple-equals": false,
    "variable-name": false,
    "restrict-plus-operands": false,
    "no-floating-promises": false,
    "no-http-string": false,
    "prefer-array-literal": false,
    "no-var-requires": false,
    "use-default-type-parameter": false,
    "await-promise": false,

    // We intentionally dislike these:
    "array-type": false,
    "insecure-random": false,
    "binary-expression-operand-order": false,
    "arrow-return-shorthand": false,
    "switch-default": false,
    "use-simple-attributes": false,
    "no-backbone-get-set-outside-model": false,
    "no-parameter-reassignment": false,
    "prefer-function-over-method": false,
    "prefer-template": false,
    "comment-format": false,
    "completed-docs": false,
    "curly": false,
    "class-name": false,
    "export-name": false,
    "file-name-casing": false,
    "function-name": false,
    "import-name": false,
    "interface-name": false,
    "interface-over-type-literal": false,
    "match-default-export-name": false,
    "max-func-body-length": false,
    "member-access": false,
    "mocha-no-side-effect-code": false,
    "newline-before-return": false,
    "no-default-export": false,
    "no-default-import": false,
    "no-empty": false,
    "no-increment-decrement": false,
    "no-magic-numbers": false,
    "no-reserved-keywords": false,
    "no-unnecessary-bind": false,
    "object-literal-sort-keys": false,
    "only-arrow-functions": false,
    "prefer-method-signature": false,
    "react-this-binding-issue": false,
    "typedef": false
  }
}
