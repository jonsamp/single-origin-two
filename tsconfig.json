{
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "baseUrl": "src",
    "esModuleInterop": true,
    "paths": {
      "@app/*": ["app/*"]
    },
    "pretty": true
  },
  "exclude": ["**/node_modules"]
}
